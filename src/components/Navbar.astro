<div id="container">
  <nav class="navbar">
    <div class="logo">
      <img src="./Group-3.png" alt="Logo" />
    </div>

    <ul class="nav-links">
      <li><a href="#">Home</a></li>
      <li><a href="#">About</a></li>
      <li><a href="#">Services</a></li>
      <li><a href="#">Why Us</a></li>
      <li><a href="#">Why FAQ's</a></li>
      <li class="contact-li">
        <a href="#" class="contact-us">Contact Us</a>
      </li>
    </ul>
  </nav>
</div>

<style>
  #container {
    width: 100%;
    background-color: #0C1424;
  }

  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100px;
    padding: 0 12px;
    color: white;
  }

  .logo {
	padding-left:10px;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 24px;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .nav-links li a {
    font-family: 'Montserrat', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 24px;
    color: #FFFFFFCC;
    text-decoration: none;
    transition: color 0.2s ease;
    
    &:hover {
      color: #22d3ee;
    }
  }

  .contact-us {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 130px;
    height: 40px;
    border-radius: 50px;
    border: 2px solid #C4062A;
    background-color: #C4062A;
    color: white;
    font-weight: 600;
    text-decoration: none;
    transition: background-color 0.2s, color 0.2s;

    &:hover {
      background-color: #c40675ff;
      color: #C4062A;
    }
  }

  @media (max-width: 768px) {
    .navbar {
      flex-direction: column;
      height: auto;
      padding: 16px 12px;
      gap: 16px;
    }

    .nav-links {
      flex-direction: column;
      gap: 12px;
      width: 100%;
      text-align: center;
    }

    .contact-li {
      width: 100%;
    }

    .contact-us {
      width: 100%;
    }
  }
</style>
