<style>
    #container{
    width: 100%;
    background-color: rgba(12, 20, 36, 1);
    }

    .row{
        position: relative;
        top: -100px;
        display: flex;
        max-width: 1440px;
        margin: 0 auto;
        padding: 20px 10px;
        display: flex;
        gap: 40px;
        transition: transform 0.3s ease;
    }

    .block{
        background-color: rgba(12, 20, 36, 1);
        border-radius: 15px;
        width: 306px;
        height: 250px;
        z-index: 100;
        display: flex;
        justify-content: center;
        text-align: center;
        align-items: center;
        transition: transform 0.3s ease;

        &:hover {
      transform: scale(1.1);
    }
    }

    .block-content h1{
        color: rgba(255, 255, 255, 1);
        font-size: 32px;
    }

    .block-content p{
        color: rgba(255, 255, 255, 0.75);
        font-size: 16px;
    }

    @media (max-width: 1200px) {
    .row {
        gap: 30px;
    }
    }

    @media (max-width: 1024px) {
    .block {
        max-width: 45%;
        flex-basis: 45%;
    }
    }

    @media (max-width: 768px) {
    .row {
        flex-direction: column;
        align-items: center;
    }

    .block {
        max-width: 90%;
        width: 100%;
        padding-top: 25px;
    }
    }
</style>