---
<section id="container">

  <div class="offer-bg"></div>

<div class="offer-overlay"></div>

  <div id="greet">
    <div class="greet-text">
    <h1>Get in Touch</h1>
    <p>We guarantee continuous support, updating and repair to ensure the optimal performance of your systems.</p>
    </div>
  </div>

<form id="contact-form">
  <div class="row"> 
  <input type="text" name="name" placeholder="Your Name" required />
  <input type="email" name="email" placeholder="Your Email" required />
  </div>
  <div class="row">
  <input type="text" name="number" placeholder="Your Phone" required />
  <input type="text" name="subject" placeholder="Subject" required />
  </div>
  <div class="row">
  <textarea name="message" placeholder="Message" required></textarea>
  </div>
  <button type="submit">Send</button>
</form>

</section>

<style>

  #container{
    display: flex;
    color: white;
    position: relative;
    width: 100%;
    height: auto;
    color: white;
    display: flex;
    padding-top: 100px;
    padding-bottom: 50px;
  }

  #container h1{
    font-family: Nunito;
    font-weight: 700;
    font-style: Bold;
    font-size: 60px;
    leading-trim: NONE;
    line-height: 67.2px;
    letter-spacing: -1px;
    vertical-align: middle;
  }

  #container p{
    font-family: Roboto;
    font-weight: 400;
    font-style: Regular;
    font-size: 15.2px;
    leading-trim: NONE;
    line-height: 24.32px;
    letter-spacing: 0%;
    vertical-align: middle;
  }

  #contact-form button {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 200px;
    height: 40px;
    border-radius: 50px;
    border: 2px solid #C4062A;
    background-color: #C4062A;
    color: white;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.2s, color 0.2s;
    margin-top: 40px;
  }

  #contact-form button:hover {
    background-color: #c40675ff;
    color: #C4062A;
  }

  .offer-bg{
        position: absolute;
        inset: 0;
        background-image: url('/offer-bg2.jpg');
        background-size: cover;
        background-position: -550px 950px;
        z-index: 0.8; 
        filter: brightness(0.45) saturate(1.2);
    }

    .offer-overlay{
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(0, 0, 0, 0.58) 0%,rgba(0, 10, 29, 0.95) 100%);
        z-index: 3;
        }

  #contact-form input::placeholder,
  #contact-form textarea::placeholder {
    color: #ffffff;
    opacity: 1;
    font-style: italic;
  }

  #greet{
    width: 100%;
    max-width: 1400px;
    padding-left: 150px;
    padding-right: 50px;
    z-index: 10;
  }

  .greet-text{
    margin: 0 auto;
  }

  #contact-form{
    width: 100%;
    max-width: 1240px;
    z-index: 10;
  }

  .row {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    padding-right: 80px;
  }

  .row input,
  .row textarea {
    flex: 1;
    min-width: 200px;
    padding: 10px;
    font-size: 16px;
    border: 0px;
    border-bottom: solid 1px;
    border-color: rgb(72, 74, 80);
    color: white;
    background-color: #cccccc00; 
  }

  @media (max-width: 768px) {
    #container{
      flex-direction: column;
      height: auto;
      padding-top: 10px;
      text-align: center;
    }

    #greet{
      padding : 0px;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  interface ApiResponse {
    success?: boolean;
    message?: string;
    error?: string;
  }

  const form = document.getElementById('contact-form') as HTMLFormElement | null;

  if (!form) {
    console.warn('Form element not found');
    return;
  }

  // handle form submit via AJAX to prevent page reload
  form.addEventListener('submit', async (e: SubmitEvent) => {
    e.preventDefault(); // stops default form submission

    const formData = new FormData(form);

    try {
      const response = await fetch('/Tembeza/api/send-email.php', {
        method: 'POST',
        body: formData,
      });

      const result = (await response.json()) as ApiResponse;

      // show alert for success/fail
      if (result.success) {
        alert(result.message || 'Message sent successfully!');
        form.reset(); // clear the form
      } else {
        alert(result.error || 'Something went wrong.');
      }
    } catch (err: unknown) {
      console.error('Form submission error:', err);
      alert('Network error. Please try again.');
    }
  });
});
</script>
